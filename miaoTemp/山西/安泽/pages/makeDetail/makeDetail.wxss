.banner_content {
    background: #a2c4fc;
    width: 100%;
}

.banner_content image {
    width: 100%;
}

.banner {
    height: 130px;
    left: 2.5%;
    margin: auto;
    position: absolute;
    top: 0;
    width: 95%;
    z-index: 1;
}

.banner_image {
    background-color: #979797;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 8px;
    height: 130px;
    width: 100%;
}

.makeDetail_top {
    background-color: #fff;
    border-radius: 10rpx;
    margin: 20rpx auto auto;
    min-height: 200rpx;
    position: relative;
    width: 95%;
}

.makeDetail_title {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    min-height: 60rpx;
    padding-top: 30rpx;
    text-align: left;
    width: 70%;
}

.makeDetail_text {
    color: #959595;
    font-size: 24rpx;
    min-height: 40rpx;
    padding-top: 10rpx;
    text-align: left;
    width: 100%;
}

.makeDetail_button {
    background-color: #e9c87b;
    border-radius: 10rpx;
    color: #fff;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    right: 10rpx;
    text-align: center;
    top: 30rpx;
    width: 130rpx;
    z-index: 1;
}

.makeDetail_price {
    line-height: 40rpx;
    min-height: 40rpx;
    padding-bottom: 25rpx;
    padding-top: 10rpx;
    width: 100%;
}

.price_hx {
    color: #979797;
    display: none;
    float: left;
    font-size: 24rpx;
    margin-left: 20rpx;
    text-decoration: line-through;
}

.price {
    color: #3773d3;
    float: left;
    font-size: 35rpx;
    font-weight: 700;
}

.makeDetail_time {
    color: #ecc46f;
    float: right;
    font-size: 24rpx;
}

.makeDetail_top_center {
    background-color: #fff;
    margin: auto;
    min-height: 200rpx;
    width: 95%;
}

.makeDetail_content {
    background-color: #fff;
    border-radius: 10rpx;
    color: #6d6d6d;
    font-size: 28rpx;
    margin: 20rpx auto auto;
    min-height: 150rpx;
    width: 95%;
}

.makeDetail_content_top {
    border-bottom: 1rpx solid #e3e3e3;
    color: #373737;
    font-size: 35rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin: auto;
    text-align: center;
    width: 95%;
}

.makeDetail_content_bottom {
    line-height: 40rpx;
    margin: auto;
    min-height: 300rpx;
    padding-top: 10rpx;
    width: 95%;
}

.makeDetail_bottom_line {
    height: 150rpx;
    margin: auto;
    width: 100%;
}

.makeDetail_bottom {
    background-color: #fff;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    bottom: 0;
    height: 100rpx;
    left: 0;
    position: fixed;
    width: 100%;
    z-index: 1;
}

.makeDetail_bottom_button {
    background-color: #2f79e6;
    border-radius: 50rpx;
    color: #fff;
    font-size: 30rpx;
    height: 70rpx;
    margin: 15rpx auto auto;
    text-align: center;
    width: 80%;
}

.makelist_li_right_image text {
    line-height: 70rpx;
}

.makeDetail_bottom_button image {
    height: 28rpx;
    margin: 25rpx 10rpx auto auto;
    width: 28rpx;
}

.n_huise {
    background-color: #ccc;
    line-height: 70rpx;
}

.makeState_content {
    margin: 115rpx auto auto;
    text-align: center;
    width: 95%;
}

.makeState_image {
    margin: auto;
    width: 290rpx;
}

.makeState_title {
    color: #317bdc;
    font-size: 35rpx;
    font-weight: 700;
    height: 80rpx;
    line-height: 80rpx;
    margin: 45rpx auto auto;
    text-align: center;
    width: 100%;
}

.makeState_text {
    color: #9e9e9e;
    margin: auto;
    min-height: 80rpx;
    width: 100%;
}

.makeState_home,.makeState_text {
    font-size: 30rpx;
    text-align: center;
}

.makeState_home {
    background-color: #2c79e3;
    border-radius: 50rpx;
    color: #fff;
    font-weight: 700;
    height: 75rpx;
    line-height: 75rpx;
    margin: 25rpx auto auto;
    width: 200rpx;
}

.bg {
    background-color: #000;
    display: block;
    filter: alpha(opacity=70);
    height: 100%;
    left: 0;
    opacity: .7;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 666;
}

.tanchuangyzm {
    background: #fff;
    border-radius: 20rpx;
    left: 10%;
    margin: 0 auto;
    min-height: 300rpx;
    position: fixed;
    top: 45%;
    width: 80%;
    z-index: 1000;
}

.tanchuangyzm_content {
    color: #2a2a2a;
    font-size: 28rpx;
    height: 100rpx;
    margin: auto;
    width: 90%;
}

.yzminput {
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    float: left;
    text-indent: 12rpx;
    width: 60%;
}

.yzm,.yzminput {
    height: 28px;
    margin-top: 70rpx;
}

.yzm {
    border-radius: 14px;
    float: right;
    width: 35%;
}

.tanchuangyzm_bottom {
    background-color: #5493fc;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    bottom: 0;
    color: #f8ffff;
    font-size: 30rpx;
    height: 80rpx;
    left: 0;
    line-height: 80rpx;
    margin: auto;
    position: absolute;
    text-align: center;
    width: 100%;
    z-index: 1;
}