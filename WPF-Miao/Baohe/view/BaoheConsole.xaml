<Page x:Class="Baohe.view.BaoheConsole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:basePage="clr-namespace:Base.view;assembly=Base"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="BaoheConsole"
      x:Name="BaohePage">

    <basePage:BaseConsole x:Name="baseConsole"
                          Title="{Binding Title}"
                          HospitalDeptList="{Binding Departments}"
                          ShowReferer="Collapsed"
                          SelectedHospitalDept="{Binding SelectedDepartment, Mode=TwoWay}">
        <basePage:BaseConsole.ButtonArea>
            <StackPanel CanVerticallyScroll="True" Background="#eee">
                <TextBox Grid.Row="2"
                    Text="{Binding RetId}"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    Height="50"
                    Margin="10"
                    TextWrapping="Wrap"
                    MaxLength="600"
                    VerticalScrollBarVisibility="Auto"
                    materialDesign:HintAssist.Hint="RetId"/>
                <materialDesign:TimePicker Width="150" SelectedTime="{Binding StartTime}"
                    Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                                           ToolTip="开始时间"
                                           WithSeconds="True"
                                           HorizontalAlignment="Left"
                                           materialDesign:HintAssist.Hint="开始时间"
                                           Margin="10"
                                           Is24Hours="True"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="查" Margin="0,0,10,0"
                    Command="{Binding SearchCommand}" Width="100">
                    </Button>
                    <!--<Button Content="约"
                    Command="{Binding AppointmentCommand}" Width="100" Margin="50, 0">
                </Button>-->
                    <Button Content="自动查约"
                    Command="{Binding AutoRunCommand}" Width="100" >
                    </Button>

                    <TextBox
                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Width="100"
                      materialDesign:HintAssist.Hint="验证码"
                      Text="{Binding VerifyCode.Yzm}"
                      Margin="8 0 0 0"
                      VerticalAlignment="Bottom" />
                    <Button Content="验证"
                        Command="{Binding VerifyCode.VerifyYzmCommand}" Width="100">
                    </Button>
                </StackPanel>
                <StackPanel>
                    <Button Content="手动发验证码" HorizontalAlignment="Left"
                        Command="{Binding VerifyCode.SendYzmCommand}" Width="120" Margin="50, 10">
                    </Button>
                    <TextBox
                        Width="120"
                        IsReadOnly="True"
                      materialDesign:HintAssist.Hint="手机号"
                      Text="{Binding VerifyCode.Phone}"
                      Margin="8 0 0 20"
                      VerticalAlignment="Bottom" />
                    <TextBox
                        Width="120"
                        IsReadOnly="True"
                      materialDesign:HintAssist.Hint="用户名"
                      Text="{Binding UserName}"
                      Margin="8 0 0 20"
                      VerticalAlignment="Bottom" />
                    <TextBox
                        Width="300"
                      materialDesign:HintAssist.Hint="备注"
                      Margin="8 0 0 0"
                      VerticalAlignment="Bottom" />
                </StackPanel>
            </StackPanel>

        </basePage:BaseConsole.ButtonArea>
    </basePage:BaseConsole>
</Page>
