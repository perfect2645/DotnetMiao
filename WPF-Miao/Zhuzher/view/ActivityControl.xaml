<UserControl x:Class="Zhuzher.view.ActivityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Ctrl="clr-namespace:Zhuzher.view">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel>
                <StackPanel Height="100" Orientation="Horizontal">
                    <Button Content="查金币"
                        Command="{Binding ActivityChanceCommand}" Width="100" Margin="5">
                    </Button>
                    <Button Content="竞猜记录"
                        Command="{Binding GuessResultCommand}" Width="100" Margin="5">
                    </Button>
                </StackPanel>
                <StackPanel Height="100" Orientation="Horizontal" Background="AliceBlue">
                    <TextBox Width="100"
                         Height="30"
                         Margin="20,10,0,10"
                         Text="{Binding ActivityGameId}"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="ActivityGameId">
                    </TextBox>
                    <Button Content="拼图抽奖"
                            Command="{Binding FragmentLotteryCommand}" Width="100" Margin="5">
                    </Button>
                    <TextBox Width="100"
                         Height="30"
                         Margin="20,10,0,10"
                         Text="{Binding GoodId}"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="GoodId">
                    </TextBox>
                    <Button Content="拼图兑换"
                            Command="{Binding FragmentExchangeCommand}" Width="100" Margin="5">
                    </Button>
                    <Button Content="拼图查询"
                            Command="{Binding FragmentHoldCommand}" Width="100" Margin="5">
                    </Button>
                    <Button Content="拼图合成"
                            Command="{Binding FragmentComposeCommand}" Width="100" Margin="5">
                    </Button>
                    <Button Content="拼图开奖"
                            Command="{Binding FragmentOpenPriceCommand}" Width="100" Margin="5">
                    </Button>
                    <Button Content="朴礼节开奖"
                            Command="{Binding PuliDrawPrizeCommand}" Width="150" Margin="5">
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Ctrl:UserSelect Title="给谁助力"
                                 Margin="0 10"
                                 Padding="10 0"
                                 UserList="{Binding TargetHelpUserList}"
                                 SelectedUser="{Binding TargetHelpUser, Mode=TwoWay}">
            </Ctrl:UserSelect>
            <TextBox Width="100"
                         Height="30"
                         Margin="20,10,0,10"
                         Text="{Binding HelpCount}"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="助力人数">
            </TextBox>
            <Button Content="助力"
                        Command="{Binding InviteHelpCommand}" Width="100" Margin="5"
                        HorizontalAlignment="Left">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
